<% layout("/layouts/boilerplate") %>
<div class="row mt-3 p-2">
  <div class="col-md-9 col-lg-8 offset-md-3 offset-lg-2">
    <h1>Create New Listing</h1>
    <form
      method="post"
      action="/listings/"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          id="title"
          name="listing[title]"
          placeholder="Enter the title"
          class="form-control"
          required
          autocomplete="off"
        />
        <div id="" class="valid-feedback">Looks Good!!!</div>
        <div id="" class="invalid-feedback">Please enter a title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea
          id="description"
          name="listing[description]"
          placeholder="Enter the description"
          class="form-control"
          rows="3"
          required
        ></textarea>
        <div id="" class="invalid-feedback">Please enter a description</div>
      </div>

      <div class="mb-3">
        <label for="imageLink" class="form-label">Upload Image:</label>
        <input
          type="file"
          id="imageLink"
          name="listing[image]"
          class="form-control"
          autocomplete="off"
          required
        />
        <div id="" class="invalid-feedback">Please Upload Image</div>
      </div>

      <div class="row">
        <div class="mb-3 col-lg-5">
          <label for="price" class="form-label">Price:</label><br />
          <div class="input-group">
            <span class="input-group-text">&#8377;</span>
            <input
              type="number"
              id="price"
              name="listing[price]"
              placeholder="Enter the price"
              required
              class="form-control input-number"
              autocomplete="off"
            />
            <div id="" class="invalid-feedback">Please valid price</div>
          </div>
        </div>

        <div class="mb-3 col-lg-7">
          <label for="location" class="form-label">Location:</label>
          <input
            type="text"
            id="location"
            name="listing[location]"
            placeholder="Enter the location"
            class="form-control"
            required
            autocomplete="off"
          />
          <div id="" class="invalid-feedback">
            Please enter a valid location
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country:</label>
        <input
          type="text"
          id="country"
          name="listing[country]"
          placeholder="Enter the country"
          class="form-control"
          required
          autocomplete="off"
        />
        <div id="" class="invalid-feedback">Please enter a valid country</div>
      </div>

      <button class="btn btn-dark mb-3" type="submit">Add</button>
    </form>
  </div>
</div>

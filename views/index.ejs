<% layout("/layouts/boilerplate") %>

<div class="mt-3 p-2">
  <div class="mb-3">
    <div class="filters d-flex justify-content-between">
      <div
        class="filter-container d-flex align-items-center py-2 px-2 gap-4 col-md-8 col-lg-9 overflow-auto"
      >
        <div class="filter">
          <div class="icons">
            <i class="fa-solid fa-fire"></i>
          </div>
          <p>Trending</p>
        </div>
        <div class="filter">
          <div class="icons"><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>
        <div class="filter">
          <div class="icons"><i class="fa-solid fa-city"></i></div>
          <p>Iconic Cities</p>
        </div>
        <div class="filter">
          <div class="icons"><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountains</p>
        </div>
        <div class="filter">
          <div class="icons"><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </div>
        <div class="filter">
          <div class="icons"><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </div>
        <div class="filter">
          <div class="icons"><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </div>
        <div class="filter">
          <div class="icons"><i class="fa-solid fa-tractor"></i></div>
          <p>Farms</p>
        </div>
        <div class="filter">
          <div class="icons"><i class="fa-regular fa-snowflake"></i></div>
          <p>Artic</p>
        </div>
      </div>

      <div
        class="tax-toggle border rounded-3 d-flex align-items-center px-3 py-2"
      >
        <div
          class="form-check-reverse form-switch d-flex align-items-center position-relative"
        >
          <input
            class="form-check-input position-absolute"
            type="checkbox"
            role="switch"
            id="flexSwitchCheckDefault"
          />
          <label
            class="form-check-label text-nowrap"
            for="flexSwitchCheckDefault"
            >Display total <br class="br">
            before taxes</label
          >
        </div>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of alllisting) {%>
    <a href="/listings/<%= listing._id %>/" style="text-decoration: none">
      <div class="card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top mb-2"
          alt="..."
          style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text m-0"><b><%= listing.title %></b></p>
          <p class="card-text m-0 listing-price">
            &#8377;<span class="original-price"
              ><%= listing.price.toLocaleString("en-IN") %> / Night
            </span>
            <span class="calculated-gst" style="display: none"></span>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>
